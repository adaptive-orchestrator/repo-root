# ========================
# Stage 1 - Build
# ========================
FROM node:22-alpine AS builder
WORKDIR /usr/bmms
COPY package*.json ./
RUN npm install
COPY ./apps ./apps/
COPY *.json ./
COPY ./libs ./libs/
# COPY .env ./
RUN npm run build

# ========================
# Stage 2 - Production
# ========================
FROM node:22-alpine
WORKDIR /usr/bmms
COPY --from=builder /usr/bmms/dist/apps/finance/payment-svc ./dist/apps/finance/payment-svc
COPY --from=builder /usr/bmms/apps/finance/payment-svc/src/proto ./dist/apps/finance/payment-svc/src/proto
COPY --from=builder /usr/bmms/dist/libs ./dist/libs/
# COPY .env ./

ARG JWT_SECRET
ENV JWT_SECRET=$JWT_SECRET

ARG TOKEN_EXPIRE_TIME: 
ENV TOKEN_EXPIRE_TIME=$TOKEN_EXPIRE_TIME

COPY package*.json ./
ENV NODE_ENV=production
RUN npm install --omit=dev

CMD ["node", "dist/apps/finance/payment-svc/src/main.js"]
