{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "monorepo": true,
  "root": "apps",
  "projects": {

    "inventory-svc": {
      "type": "application",
      "root": "apps/order/inventory-svc",
      "entryFile": "main",
      "sourceRoot": "apps/order/inventory-svc/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    },
    "billing-svc": {
      "type": "application",
      "root": "apps/finance/billing-svc",
      "entryFile": "main",
      "sourceRoot": "apps/finance/billing-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/finance/billing-svc/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    },
    "event": {
      "type": "library",
      "root": "libs/event",
      "entryFile": "index",
      "sourceRoot": "libs/event/src",
      "compilerOptions": {
        "tsConfigPath": "libs/event/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}