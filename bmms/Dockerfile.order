# ========================
# Stage 1 - Build
# ========================
FROM node:22-alpine AS builder
WORKDIR /usr/bmms
COPY package*.json ./
RUN npm install
COPY ./apps ./apps/
COPY *.json ./
COPY ./libs ./libs/
COPY .env ./
RUN npm run build 

# ========================
# Stage 2 - Production
# ========================
FROM node:22-alpine
WORKDIR /usr/bmms
COPY --from=builder /usr/bmms/dist/apps/order/order-svc ./dist/apps/order/order-svc
COPY --from=builder /usr/bmms/apps/order/order-svc/src/proto ./dist/apps/order/order-svc/src/proto
COPY --from=builder /usr/bmms/dist/libs ./dist/libs/
COPY .env ./
COPY package*.json ./
ENV NODE_ENV=production
RUN npm install --omit=dev

CMD ["node", "dist/apps/order/order-svc/src/main.js"]