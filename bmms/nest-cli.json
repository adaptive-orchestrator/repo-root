        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/out-tsc/apps/finance/billing-svc/src"
          }
        ]
      }
    },
    "bmms": {
      "type": "application",
      "root": "apps/bmms",
      "entryFile": "main",
      "sourceRoot": "apps/bmms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bmms/tsconfig.app.json"
      }
