{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/platform/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/platform/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/platform/api-gateway/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/out-tsc/apps/platform/api-gateway/src"
          }
        ]
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "auth-svc": {
      "type": "application",
      "root": "apps/customer/auth-svc",
      "entryFile": "main",
      "sourceRoot": "apps/customer/auth-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer/auth-svc/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/out-tsc/apps/customer/auth-svc/src"
          }
        ]
      }
    },
    "billing-svc": {
      "type": "application",
      "root": "apps/finance/billing-svc",
