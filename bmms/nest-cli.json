    "crm-orchestrator": {
      "type": "application",
      "root": "apps/customer/crm-orchestrator",
      "entryFile": "main",
      "sourceRoot": "apps/customer/crm-orchestrator/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer/crm-orchestrator/tsconfig.app.json"
